<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/read_dl_slide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EA5455"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FAFBFC">

        <!--阅读页面-->
        <life.forever.cf.weight.PageView
            android:id="@+id/read_pv_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fl_banner"
            android:clickable="true"
            tools:visibility="visible" />
        <FrameLayout
            android:id="@+id/fl_banner"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"></FrameLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/read_abl_top_menu"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_FEFFFF"
            android:visibility="invisible">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/Theme.ToolBar.Menu"
                app:navigationIcon="@drawable/back">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <life.forever.cf.weight.MarqueeView
                        android:id="@+id/book_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="-5dp"
                        android:layout_toLeftOf="@+id/fl_bulk_buy"
                        android:gravity="center"
                        android:textColor="@color/color_000001"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/fl_bulk_buy"
                        android:layout_width="68dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/fl_feedback"
                        android:background="@android:color/transparent"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/shape_no_internet_reload_7dp"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/color_F9F9F9"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <CheckBox
                            android:id="@+id/ck_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/content_down"
                            android:button="@null"
                            android:clickable="false"
                            android:focusable="false" />
                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/fl_feedback"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <CheckBox
                            android:id="@+id/ck_more"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:background="@drawable/read_menu"
                            android:button="@null"
                            android:clickable="false"
                            android:focusable="false" />
                    </FrameLayout>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSecondaryBlack"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_more_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_reload_efeeee_14"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingBottom="9dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:text="@string/download"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/icon_login_cancel" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/current_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_money"
                    android:layout_marginTop="8dp"
                    android:text="@string/current_chapter"
                    android:textColor="@color/color_656667"
                    android:textSize="14sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/start_buy"
                    android:layout_marginTop="16dp"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:id="@+id/ll_book_update_cb"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_f2f3f4_corner_4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="@string/lock_hint"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right">

                        <CheckBox
                            android:id="@+id/auto_lock_cb"
                            android:layout_width="44dp"
                            android:layout_height="34dp"
                            android:background="@drawable/selector_boyi_checkbox"
                            android:button="@null"
                            android:clickable="false"
                            android:focusable="false" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="@string/balance"
                        android:textColor="@color/color_656667"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/buy_more_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_656667"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/topup_coins"
                        android:textColor="@color/color_656667"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="｜"
                        android:textColor="@color/color_DADBDD"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_coupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_656667"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/topup_bouns"
                        android:textColor="@color/color_656667"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/start_buy"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_22dp_button"
                    android:gravity="center"
                    android:text="@string/unlock_and_download"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSecondaryBlack"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_catalog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="150dp"
                android:background="@drawable/shape_reload_efeeee_14"
                android:orientation="vertical"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/rl_close_chapter"
                    android:layout_width="51dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_white_no_corner_d8d8d8_12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/common_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/book_this_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/book_cover_detail"
                        android:layout_width="40dp"
                        android:layout_height="58dp" />

                    <TextView
                        android:id="@+id/book_name_chapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/book_cover_detail"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="70dp"
                        android:layout_toRightOf="@+id/book_cover_detail"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_000001"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/book_name_chapter"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="70dp"
                        android:layout_toRightOf="@+id/book_cover_detail"
                        android:drawableRight="@drawable/commom_arrow"
                        android:drawablePadding="2dp"
                        android:ellipsize="end"
                        android:lines="1"

                        android:text="@string/read_recommend_detail"
                        android:textColor="@color/color_6D7278"
                        android:textSize="14sp" />


                </RelativeLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/color_F0F4F4" />

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/color_F7F8F9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_777777"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/color_777777"
                        android:textSize="15sp" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/order"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="20dp"
                        android:padding="14dp"
                        android:src="@drawable/positive_sequence_up" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/colorSecondaryBlack"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_reload_efeeee_14"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/color_FEFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">

                    <RelativeLayout
                        android:id="@+id/book_detail"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_above="@+id/view"
                        android:layout_marginTop="20dp"
                        android:background="@color/color_FEFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/book_cover"
                            android:layout_width="50dp"
                            android:layout_height="73dp" />

                        <TextView
                            android:id="@+id/book_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/book_cover"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="70dp"
                            android:layout_toRightOf="@+id/book_cover"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/color_000001"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/book_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/book_name"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="70dp"
                            android:layout_toRightOf="@+id/book_cover"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/color_000001"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/book_chapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/book_cover"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="70dp"
                            android:layout_toRightOf="@+id/book_cover"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/color_656667"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignTop="@+id/book_cover"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/commom_arrow" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@+id/ll_book_submecate"
                        android:layout_marginTop="17dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/color_F0F4F4" />

                    <LinearLayout
                        android:id="@+id/ll_book_submecate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_above="@+id/view_line1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/auto_unlock"
                            android:textColor="@color/color_000001"
                            android:textSize="15sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="16dp">

                            <CheckBox
                                android:id="@+id/book_update_cb"
                                android:layout_width="44dp"
                                android:layout_height="34dp"
                                android:background="@drawable/selector_boyi_checkbox"
                                android:button="@null"
                                android:focusable="false" />

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_line1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@+id/facebook_share"
                        android:layout_marginRight="16dp"
                        android:background="@color/color_F0F4F4" />

                    <LinearLayout
                        android:id="@+id/facebook_share"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_above="@+id/view_line2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/read_share_facebook"
                            android:textColor="@color/color_1F1F1F"
                            android:textSize="15sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="16dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/commom_arrow" />

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_line2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@+id/ll_book_report"
                        android:layout_marginRight="16dp"
                        android:background="@color/color_F0F4F4" />

                    <LinearLayout
                        android:id="@+id/ll_book_report"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_above="@+id/view_line3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/report_story"
                            android:textColor="@color/color_1F1F1F"
                            android:textSize="15sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="16dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/commom_arrow" />

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_line3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@+id/cancel_setting"
                        android:layout_marginRight="16dp"
                        android:background="@color/color_F0F4F4" />

                    <ImageView
                        android:id="@+id/cancel_setting"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/read_setting_cancel" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/is_add_shelf"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape_black_b3_corner_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_small_cover"
                android:layout_width="40dp"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_add_shelf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:lineSpacingExtra="8dp"
                android:maxLines="2"
                android:text="@string/add_shelf_hint"
                android:textColor="@color/color_FEFFFF"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_add_shelf"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginRight="17dp"
                android:src="@drawable/add_shelf_button" />


            <ImageView
                android:id="@+id/iv_add_shelf_cancel"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/add_library_cancel" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_clickToDismiss"
            android:layout_width="wrap_content"
            android:layout_above="@+id/read_ll_bottom_menu"
            android:layout_height="wrap_content"
            android:visibility="gone">


            <ImageView
                android:id="@+id/iv_add_shelf_read"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"

                android:layout_marginBottom="32dp"
                android:background="@drawable/add_shelf"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>

        <!--底部页面-->
        <LinearLayout
            android:id="@+id/read_ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_FEFFFF"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">


            <!--页面进度栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/read_tv_pre_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:text="@string/the_previous_chapter"
                    android:textColor="@color/color_000001"
                    android:textSize="11sp" />

                <SeekBar
                    android:id="@+id/read_sb_chapter_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:maxHeight="1.5dp"
                    android:progressDrawable="@drawable/read_seekbar_progress"
                    android:thumb="@drawable/shape_circle_red_seekbar_thumb" />

                <TextView
                    android:id="@+id/read_tv_next_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="13dp"
                    android:text="@string/the_next_chapter"
                    android:textColor="@color/color_000001"
                    android:textSize="11sp" />
            </LinearLayout>

            <!--菜单栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_catalogOpen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/catalogOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/selector_read_nav_catalog" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_readSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/readSettings"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/selector_read_nav_setting" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_nightModeCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/nightModeCheckBox"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/selector_read_nav_night" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="4dp"
                            android:baselineAlignBottom="true"
                            android:src="@drawable/selector_read_nav_comment" />

                        <TextView
                            android:id="@+id/commentTag"
                            android:layout_width="25dp"
                            android:layout_height="13dp"
                            android:layout_gravity="right|top"
                            android:background="@drawable/shape_circle_black"
                            android:gravity="center"
                            android:text="99+"
                            android:textColor="@color/color_F3F3F3"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/tips_read"
        layout="@layout/layout_new_user_read_tip"
        android:visibility="gone" />

    <include
        android:id="@+id/tips_read_unclock"
        layout="@layout/layout_new_user_read_subribe_tip"
        android:visibility="gone" />


</androidx.drawerlayout.widget.DrawerLayout>
