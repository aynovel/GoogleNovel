<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        android:src="@drawable/yre" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textColor="@color/discover_name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/itemSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/discover_name"
            android:textSize="15sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/button"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_transparent_corner_3dp_orange_border"
            android:gravity="center"
            android:text="@string/mine_sign"
            android:minHeight="24dp"
            android:textColor="@color/orange_color"
            android:textSize="12sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/tipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_share_to_make_money"
                android:textColor="@color/theme_color"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/pop" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_boyi_checkbox"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
