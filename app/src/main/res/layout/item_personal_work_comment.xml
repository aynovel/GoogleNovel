<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_selector"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <life.forever.cf.publics.weight.RadiusImageView
                android:id="@+id/head"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/default_user_logo"
                app:border_color="@color/gray_4_color"
                app:border_width="1dp"
                app:is_circle="true" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="140dp"
                android:text="伊人兮在水一方伊人兮在水一方"
                android:textColor="@color/dark_2_color"
                android:textSize="14sp" />

            <life.forever.cf.publics.weight.LevelView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="LV2"
                android:textSize="8sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ment_icon_a"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="4"
                android:textColor="#FFAEAEAE"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ttye"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="4"
                android:textColor="#FFAEAEAE"
                android:textSize="11sp" />

        </LinearLayout>

        <life.forever.cf.sql.NiceRatingBar
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:nrb_starTotal="5"
            app:nrb_starImageWidth="24dp"
            app:nrb_starImageHeight="24dp"
            app:nrb_starFullResource="@drawable/five_pointed_star_big"
            app:nrb_starEmptyResource="@drawable/five_star_empty_big"
            app:nrb_starHalfResource="@drawable/half_five_star_big"
            app:nrb_ratingStatus="Enable"
            app:nrb_starImagePadding="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:progress="50"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/reward_value"
            android:textColor="@color/gold_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <life.forever.cf.publics.weight.viewtext.FixedTextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:maxLines="3"
            android:textColor="@color/gray_1_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_4_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="50dp"
            android:layout_height="67dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/default_work_cover" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天才小毒妃"
                android:textColor="@color/dark_2_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="芥末"
                android:textColor="@color/gray_1_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type"
            android:layout_width="34dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_transparent_corner_3dp_gray_border"
            android:gravity="center"
            android:text="@string/book_review"
            android:textColor="@color/gray_2_color"
            android:textSize="11sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天前"
            android:textColor="@color/gray_1_color"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        style="@style/common_horizontal_line"
        android:layout_marginTop="20dp" />

</LinearLayout>