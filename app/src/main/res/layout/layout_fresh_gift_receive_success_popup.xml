<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner_15dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="205dp"
        android:layout_height="173dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/recommend_fresher_gift_receive_success_icon" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/eceiving_books_beans"
        android:textColor="@color/dark_2_color"
        android:textSize="20sp" />

    <life.forever.cf.publics.weight.viewtext.MagnetTextView
        android:id="@+id/checkNow"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_red_corner_5dp"
        android:gravity="center"
        android:text="@string/aiye_check_now"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp" />
</LinearLayout>