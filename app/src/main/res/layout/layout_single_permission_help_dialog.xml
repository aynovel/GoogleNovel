<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_white_corner_15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/dark_2_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/why"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/why_need_permission"
            android:textColor="@color/dark_2_color"
            android:textSize="16sp" />

        <life.forever.cf.publics.weight.viewtext.FixedTextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" android:textColor="@color/dark_3_color"
            android:textSize="14sp" />

        <View style="@style/common_horizontal_line" />

        <life.forever.cf.publics.weight.viewtext.MagnetTextView
            android:id="@+id/open"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/permission_open"
            android:textColor="@color/theme_color"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>