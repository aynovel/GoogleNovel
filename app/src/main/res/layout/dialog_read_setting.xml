<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_setting"
    android:layout_alignParentBottom="true"
    android:background="@color/color_FEFFFF"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/nb.read_setting.divider"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/read_setting_iv_brightness_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@drawable/hhdf" />


        <SeekBar
            android:id="@+id/read_setting_sb_brightness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="255"
            android:maxHeight="1.5dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/read_seekbar_progress"
            android:thumb="@drawable/shape_circle_red_seekbar_thumb"
            android:thumbOffset="10dp" />

        <ImageView
            android:id="@+id/read_setting_iv_brightness_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/rtth" />

        <CheckBox
            android:id="@+id/read_setting_cb_brightness_auto"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="系统"
            android:textColor="@color/selector_btn_read_setting"
            android:visibility="gone" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/read_setting_rg_page_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/nb.read_setting.divider"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/read_setting_rb_simulation"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ebeced_corner_20dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/color_000001"
            android:text="Slide"
            android:textSize="14dp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/read_setting_rb_cover"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="@drawable/shape_theme_corner_20dp"
            android:button="@null"
            android:gravity="center"
            android:text="@string/shop_name"
            android:textColor="@color/theme_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/read_setting_rb_slide"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="滑动"
            android:textSize="14dp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/read_setting_rb_scroll"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:background="@drawable/shape_ebeced_corner_20dp"
            android:textColor="@color/color_000001"
            android:button="@null"
            android:gravity="center"
            android:text="@string/shop_down_name"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/read_setting_rb_none"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="无"
            android:textSize="14dp"
            android:visibility="gone" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/nb.read_setting.divider"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/read_setting_typeface_a"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="@drawable/shape_theme_corner_20dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:text="@string/read_typeface_merriweatherr"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/read_setting_typeface_b"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:background="@drawable/shape_ebeced_corner_20dp"
            android:textColor="@color/color_000001"
            android:button="@null"
            android:gravity="center"
            android:text="@string/read_typeface_roboto"
            android:textSize="14sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ebeced_corner_20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/smallerFont"
                android:layout_width="22dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/reduce_the_font" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="14dp"

                android:layout_gravity="center"
                android:src="@color/color_C6D0DA" />


            <ImageView
                android:id="@+id/largerFont"
                android:layout_width="22dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/add_font" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ebeced_corner_20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line_small"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/line_jian" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@color/color_C6D0DA" />


            <ImageView
                android:id="@+id/line_larger"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/line_add" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nb.read_setting.divider"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="100dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:background="@drawable/shape_btn_read_setting_normal"
            android:gravity="center"
            android:text="Aa-"
            android:textSize="14dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="100dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_btn_read_setting_normal"
            android:gravity="center"
            android:padding="5dp"
            android:text="Aa+"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bgColor1"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_theme_corner_12dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/bgColor2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_white_corner_f3e7ce_12dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bgColor3"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_white_corner_cbd9e5_12dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bgColor4"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_white_corner_d6e4cc_12dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/read_setting_rv_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none"
        android:visibility="gone" />


</LinearLayout>
