<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/left_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" />

    <TextView
        android:id="@+id/left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:textColor="@color/dark_2_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/middle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:maxWidth="180dp"
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/color_000001"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right_image_view_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/dark_2_color"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider"
        style="@style/common_horizontal_line"
        android:layout_gravity="bottom" />

</FrameLayout>
