<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/imgBonus"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_task_bonus"/>


    <TextView
        android:id="@+id/tvBonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imgBonus"
        android:text="+10 Bonus"
        android:textSize="16sp"
        android:textColor="@color/color_F9791C"
        app:layout_constraintTop_toTopOf="@+id/imgBonus"
        app:layout_constraintBottom_toBottomOf="@+id/imgBonus"
        android:layout_marginLeft="6dp"/>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBonus"
        android:text="Unlock chapters"
        android:gravity="start"
        app:layout_constraintRight_toLeftOf="@+id/tvState"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        android:text="Unlock any chapters"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/tvState"
        android:layout_width="88dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="88:28"
        app:layout_constraintTop_toTopOf="@id/imgBonus"
        android:background="@drawable/bg_task_item_nomal"
        android:text="Recharge"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvContent"/>


</androidx.constraintlayout.widget.ConstraintLayout>