<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/debug"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/logo_novel_star"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/app_name"
        android:textColor="@color/color_1F1F1F"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="Version:0.2.0"
        android:textColor="@color/color_1F1F1F"
        android:textSize="14sp" />

    <life.forever.cf.publics.weight.KOL
        android:id="@+id/TermsServiceItem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:itemTitle="@string/terms_service"
        app:itemType="tip" />

    <View style="@style/common_horizontal_line" />

    <life.forever.cf.publics.weight.KOL
        android:id="@+id/PrivacyPolicyItem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:itemTitle="@string/privacy_policy"
        app:itemType="tip" />

    <View style="@style/common_horizontal_line" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:text="@string/official_contact"
        android:textColor="@color/gray_1_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="copyright ©️ 2018-2022 "
            android:textColor="@color/gray_1_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/gray_1_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" All Rights Reserved"
            android:textColor="@color/gray_1_color"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>