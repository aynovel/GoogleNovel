<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:background="@drawable/shadow">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="82dp"
            android:layout_height="110dp"
            android:src="@drawable/default_work_cover"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right" />
    </FrameLayout>
    <TextView
        android:id="@+id/ranking"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/icon_ranking_one"
        android:gravity="center"
        android:text="1"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="1"

            android:layout_alignParentTop="true"
            android:text="Call Me Baly Not Ahj"
            android:textColor="@color/discover_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/book_name"
            android:ellipsize="end"
            android:lines="1"
            android:text="Romance"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/book_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="RomanceRomanceRomanceRomanceRomanceRomanceRomanceRomanceRomanceRomanceRomanceRomanceRomanceRomance"
            android:layout_above="@+id/book_other"
            android:textColor="@color/color_777777"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/book_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:text="Romance"
            android:textColor="@color/color_777777"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>

