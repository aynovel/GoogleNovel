<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/book_shelf_item_shadow">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/default_work_cover" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="厉少宠妻请节制"
                android:textColor="#FF272727"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="剑，百兵王者！王者，掌霸气也！剑，百兵王者！王者，掌霸气也！剑，百兵王者！王者，掌霸气也！剑，百兵王者！王者，掌霸气也！剑，百兵王者！王者，掌霸气也！"
                android:textColor="@color/gray_1_color"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/hor_icon"
                    android:drawablePadding="2dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="青蓝"
                    android:textColor="#FFB0B0B0"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_transparent_corner_3dp_gold_border"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="东方玄幻"
                    android:textColor="@color/gold_color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/clickCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_transparent_corner_3dp_orange_border"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="1.8w点击"
                    android:textColor="@color/orange_color"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/common_horizontal_line"
        android:layout_gravity="bottom" />
</FrameLayout>