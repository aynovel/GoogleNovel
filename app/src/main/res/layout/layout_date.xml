<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <life.forever.cf.weight.YearPicker
        android:id="@+id/yearPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:selectedTextColor="@color/com_ycuwq_datepicker_selectedTextColor" />

    <life.forever.cf.weight.MonthPicker
        android:id="@+id/monthPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:selectedTextColor="@color/com_ycuwq_datepicker_selectedTextColor" />

    <life.forever.cf.weight.DayPicker
        android:id="@+id/dayPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:selectedTextColor="@color/com_ycuwq_datepicker_selectedTextColor" />
</LinearLayout>